---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { trainers } from '../../data/trainers.js';
---

<Layout title="Our Expert Trainers - LbisTech Training">
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Meet Our <span class="text-primary-600">Expert Trainers</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Learn from industry professionals with years of real-world experience and proven track records in cloud computing and DevOps.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <div class="bg-white/50 backdrop-blur-sm px-6 py-3 rounded-full">
              <span class="text-sm font-medium text-gray-700">üèÜ Industry Certified</span>
            </div>
            <div class="bg-white/50 backdrop-blur-sm px-6 py-3 rounded-full">
              <span class="text-sm font-medium text-gray-700">üíº Real-World Experience</span>
            </div>
            <div class="bg-white/50 backdrop-blur-sm px-6 py-3 rounded-full">
              <span class="text-sm font-medium text-gray-700">üéì Expert Instructors</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Trainers Grid -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {trainers.map(trainer => (
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 overflow-hidden group">
              <!-- Trainer Image -->
              <div class="relative h-64 overflow-hidden">
                <img 
                  src={trainer.image} 
                  alt={trainer.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                <div class="absolute bottom-4 left-4 right-4">
                  <h3 class="text-xl font-bold text-white mb-1">{trainer.name}</h3>
                  <p class="text-primary-200 text-sm">{trainer.title}</p>
                </div>
              </div>

              <!-- Trainer Content -->
              <div class="p-6">
                <!-- Bio -->
                <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                  {trainer.bio}
                </p>

                <!-- Specialties -->
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2">Specialties</h4>
                  <div class="flex flex-wrap gap-2">
                    {trainer.specialties.slice(0, 3).map(specialty => (
                      <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-xs font-medium">
                        {specialty}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- Stats -->
                <div class="grid grid-cols-2 gap-4 mb-6">
                  <div class="text-center">
                    <div class="text-2xl font-bold text-primary-600">{trainer.students}</div>
                    <div class="text-xs text-gray-600">Students</div>
                  </div>
                  <div class="text-center">
                    <div class="text-2xl font-bold text-secondary-600">{trainer.experience}</div>
                    <div class="text-xs text-gray-600">Experience</div>
                  </div>
                </div>

                <!-- Certifications Preview -->
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2">Key Certifications</h4>
                  <div class="space-y-1">
                    {trainer.certifications.slice(0, 2).map(cert => (
                      <div class="flex items-center space-x-2 text-sm text-gray-600">
                        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>{cert}</span>
                      </div>
                    ))}
                    {trainer.certifications.length > 2 && (
                      <div class="text-xs text-gray-500">
                        +{trainer.certifications.length - 2} more certifications
                      </div>
                    )}
                  </div>
                </div>

                <!-- CTA -->
                <div class="flex items-center justify-between">
                  <a 
                    href={`/trainers/${trainer.id}`}
                    class="bg-primary-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
                  >
                    View Profile
                  </a>
                  <div class="flex space-x-2">
                    {trainer.social.linkedin && (
                      <a href={trainer.social.linkedin} class="text-gray-400 hover:text-primary-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                      </a>
                    )}
                    {trainer.social.github && (
                      <a href={trainer.social.github} class="text-gray-400 hover:text-primary-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      </a>
                    )}
                    {trainer.social.twitter && (
                      <a href={trainer.social.twitter} class="text-gray-400 hover:text-primary-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Our Trainers -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Our Trainers Stand Out</h2>
          <p class="text-lg text-gray-600">
            Our trainers bring a unique combination of industry experience, teaching expertise, and passion for technology
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-white p-6 rounded-2xl shadow-lg text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Industry Certified</h3>
            <p class="text-gray-600 text-sm">All trainers hold multiple industry certifications from AWS, Microsoft, and other leading providers</p>
          </div>

          <div class="bg-white p-6 rounded-2xl shadow-lg text-center">
            <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Real Experience</h3>
            <p class="text-gray-600 text-sm">Years of hands-on experience working with enterprise clients and complex cloud infrastructures</p>
          </div>

          <div class="bg-white p-6 rounded-2xl shadow-lg text-center">
            <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Teaching Excellence</h3>
            <p class="text-gray-600 text-sm">Proven track record of successful student outcomes and high certification pass rates</p>
          </div>

          <div class="bg-white p-6 rounded-2xl shadow-lg text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Continuous Support</h3>
            <p class="text-gray-600 text-sm">Available for ongoing mentorship and career guidance beyond course completion</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Join Our Team CTA -->
    <section class="py-20 bg-primary-600 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6">Interested in Teaching with Us?</h2>
          <p class="text-xl text-primary-100 mb-8">
            We're always looking for passionate industry experts to join our team of trainers
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
              Apply to Teach
            </a>
            <a href="/about" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white/10 transition-colors">
              Learn More
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>