---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us - LbisTech Training">
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            About <span class="text-primary-600">LbisTech</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Pakistan's leading AWS and DevOps certification training provider, empowering professionals with industry-recognized skills and knowledge.
          </p>
        </div>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Mission</h2>
            <p class="text-lg text-gray-600 mb-8">
              To bridge the skills gap in cloud computing and DevOps by providing world-class training programs that prepare professionals for the demands of the modern tech industry. We believe in practical learning, hands-on experience, and continuous support to ensure our students succeed.
            </p>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-900">Quality Education</h3>
                  <p class="text-gray-600">Industry-relevant curriculum designed by experts</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-900">Practical Learning</h3>
                  <p class="text-gray-600">Hands-on labs and real-world projects</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-900">Community Support</h3>
                  <p class="text-gray-600">24/7 community for continuous learning</p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img 
              src="https://images.pexels.com/photos/7688336/pexels-photo-7688336.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Team collaboration"
              class="w-full h-96 object-cover rounded-2xl shadow-2xl"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Story -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Story</h2>
            <p class="text-lg text-gray-600">
              Founded with the vision of making cloud computing and DevOps education accessible to everyone in Pakistan
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white p-8 rounded-2xl shadow-lg text-center">
              <div class="text-4xl font-bold text-primary-600 mb-2">2020</div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Founded</h3>
              <p class="text-gray-600">
                Started with a small team of passionate educators and industry experts
              </p>
            </div>
            <div class="bg-white p-8 rounded-2xl shadow-lg text-center">
              <div class="text-4xl font-bold text-secondary-600 mb-2">5000+</div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Students Trained</h3>
              <p class="text-gray-600">
                Helped thousands of professionals advance their careers
              </p>
            </div>
            <div class="bg-white p-8 rounded-2xl shadow-lg text-center">
              <div class="text-4xl font-bold text-accent-600 mb-2">95%</div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Success Rate</h3>
              <p class="text-gray-600">
                Industry-leading certification pass rate
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Values</h2>
          <p class="text-lg text-gray-600">
            The principles that guide everything we do
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Excellence</h3>
            <p class="text-gray-600">
              We strive for excellence in every aspect of our training programs
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Community</h3>
            <p class="text-gray-600">
              Building a supportive learning community for all our students
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Innovation</h3>
            <p class="text-gray-600">
              Continuously updating our curriculum with the latest technologies
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Integrity</h3>
            <p class="text-gray-600">
              Maintaining the highest standards of honesty and transparency
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Achievements -->
    <section class="py-20 bg-primary-600 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl font-bold mb-6">Our Achievements</h2>
          <p class="text-xl text-primary-100">
            Recognition and milestones that showcase our commitment to excellence
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold mb-2">AWS</div>
            <div class="text-lg font-medium mb-1">Training Partner</div>
            <div class="text-primary-200">Authorized AWS Training Partner</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold mb-2">95%</div>
            <div class="text-lg font-medium mb-1">Pass Rate</div>
            <div class="text-primary-200">Industry-leading certification success</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold mb-2">50+</div>
            <div class="text-lg font-medium mb-1">Corporate Clients</div>
            <div class="text-primary-200">Leading companies trust us</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold mb-2">4.9/5</div>
            <div class="text-lg font-medium mb-1">Student Rating</div>
            <div class="text-primary-200">Excellent student satisfaction</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Ready to Start Your Journey?</h2>
          <p class="text-xl text-gray-600 mb-8">
            Join thousands of professionals who have advanced their careers with LbisTech
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/courses" class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors">
              Browse Courses
            </a>
            <a href="/contact" class="border-2 border-primary-600 text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>